{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["es2016"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.json", "./test/**/*.ts"],
  "exclude": ["./test/out/**/*.ts"]
}
